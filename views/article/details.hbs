  <div class="container details">
        <div class="details-content">
            <h2>{{title}}</h2>
            <strong>{{category}}</strong>
            <p>{{content}}</p>
            <div class="buttons">
                {{#if canDelete}}
                <a href="#/close/{{id}}" class="btn delete">Delete</a>
                <a href="#/edit/{{id}}" class="btn edit">Edit</a>
                {{else}}
                <a href="#/dashboard" class="btn edit">Back</a>
                {{/if}}
            </div>
        </div>
    </div>
